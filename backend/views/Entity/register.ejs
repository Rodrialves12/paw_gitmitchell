    <!-- End layout styles -->
    <link rel="shortcut icon" href="../adminPage/assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('../sidebar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">        
        <!-- partial:partials/_navbar.html -->
        <%- include('../navbar.ejs') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper pb-0">        
            <main>
              <section class="py-1 text-center container">
                <div class="row py-lg-2">
                  <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Create an Entity</h1>
                    <p class="lead text-body-secondary">Join ClosetSwap and start contributing to a better world!</p>
                  </div>
                </div>
              </section>
          
              <div class="container">
                <div class="row justify-content-md-center">
                  <div class="col-md-6">
                    <form action="/entity/save" method="POST" enctype="multipart/form-data">
                      <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                      </div>
                      <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                      </div>
                      <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Enter your description" required>
                      </div>
                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="location" placeholder="Enter your location" required>
                      </div>
                      <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="Enter your address" required>
                      </div>
                      <div class="mb-3">
                        <label for="nif" class="form-label">NIF</label>
                        <input type="text" class="form-control" id="Inputnif" name="nif" onchange="checkNif()" placeholder="Enter your NIF" required>
                      </div>
                      <div class="mb-3">
                        <label for="contact" class="form-label">Telephone</label>
                        <input type="text" class="form-control" id="Inputcell" name="contact" onchange="checkCell()" placeholder="Enter your telephone number" required>
                      </div>
                      <div class="mb-3">
                        <label for="photo" class="form-label">Photo</label>
                        <input type="file" class="form-control" id="file" name="file" accept="image/*" required>
                      </div>
                      <div class="text-end mb-5">
                        <button type="submit" class="btn btn-primary">Register</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              </main>                    
            <script>
              function checkNif() {
                var input = document.getElementById("Inputnif").value;
                var number = parseInt(input);
                
                if(isNaN(number) ||number < 99999999){
                  alert("NIF must have at least 9 numbers!");
                  document.getElementById("Inputnif").value = "";
                }
                if(isNaN(number) ||number > 999999999){
                  alert("NIF must have at least 9 numbers!");
                  document.getElementById("Inputnif").value = "";
                }
              }
              function checkCell() {
              var input = document.getElementById("Inputcell").value;
              var number = parseInt(input);
          
              if(isNaN(number) ||number < 99999999){
            alert("Cellphone number must have at least 9 numbers!");
            document.getElementById("Inputcell").value = "";
              }
              if(isNaN(number) ||number > 999999999){
                alert("Cellphone number must have at least 9 numbers!");
                document.getElementById("Inputcell").value = "";
              }
              }
              
              var mensagem = new URLSearchParams(window.location.search).get('mensagem');
              if(mensagem){
                alert(mensagem);
              }
            </script>
          
          <style>
          .container-scroller {
                      min-height: 100vh;
                      /* Define a altura m√≠nima como 100% da altura da janela do navegador */
                    }
          </style>
            </div>
          </div>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="adminPage/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
